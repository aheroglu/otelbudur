@model AddRoleViewModel

@{
    ViewData["Title"] = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="dashboard-reservation">
    <div class="single-reservation bg-white base-padding">
        <h3 class="single-reservation-title text-center my-3"> Add Role </h3>
        <div class="custom--form dashboard-form">
            <form method="post">
                <div class="dashboard-flex-input">
                    <div class="dashboard-input mt-4">
                        <label class="label-title"> Role Name </label>
                        <input asp-for="RoleName" type="text" class="form--control" placeholder="Role Name">
                        <span asp-validation-for="RoleName" class="text-danger"></span>
                    </div>
                </div>
                <div class="btn-wrapper mt-4">
                    <div class="d-grid gap-2">
                        <button type="submit" class="cmn-btn btn-bg-1">Add</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>



<script>
    var users = document.getElementById('users');
    var roles = document.getElementById('roles');

    users.classList.add('active');
    roles.classList.add('selected');</script>