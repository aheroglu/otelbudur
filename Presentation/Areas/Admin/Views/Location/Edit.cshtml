@model Entity.Concrete.Location

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="dashboard-reservation">
    <div class="single-reservation bg-white base-padding">
        <h3 class="single-reservation-title text-center my-3"> Edit Location </h3>
        <div class="custom--form dashboard-form">
            <form method="post">
                <div class="dashboard-flex-input">
                    <div class="dashboard-input mt-4">
                        <label class="label-title"> Location Name </label>
                        <input asp-for="Name" type="text" class="form--control" placeholder="Location Name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="btn-wrapper mt-4">
                    <div class="d-grid gap-2">
                        <button type="submit" class="cmn-btn btn-bg-1">Save Changes</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


<script>
    var hotelOperations = document.getElementById('hotelOperations');
    var locations = document.getElementById('locations');

    hotelOperations.classList.add('active');
    locations.classList.add('selected');
</script>